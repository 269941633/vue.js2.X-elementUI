#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../../../_html-minifier@3.5.3@html-minifier/cli.js" "$@"
  ret=$?
else 
  node  "$basedir/../../../_html-minifier@3.5.3@html-minifier/cli.js" "$@"
  ret=$?
fi
exit $ret
